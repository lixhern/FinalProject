@model FinalProject.ViewModels.LoginViewModel

@{
   
    <div class="container">
        <div class="row">
            <div class="col">
            </div>
            <div class="col">
                <div class="row">
                <h1 class="lang" key ="login">Log in</h1>
                <form method="post" asp-controller="Account" asp-action="Login">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label lang" key ="email">Email address</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" for="exampleInputPassword1" class="form-label lang" key ="password">Password</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <button type="submit" class="btn btn-outline-success lang mb-3" key="submit">Submit</button>
                </form>
                </div>
                <div class="row" >
                    <a class ="lang" key="login2" href="Registration">Create account?</a>
                </div>
            </div>
            <div class="col">
            </div>
        </div>
    </div>
}
