@* @model FinalProject.ViewModels.CreateIssueViewModel; *@
@{
    ViewData["Title"] = "Create Issue";
}
<div class="d-flex justify-content-center align-items-center">
    <h1 class="lang" key="crIssue">Create Issue</h1>
</div>


<div class="container">
    <div class="row">
        <div class="col"></div>
        <div class="col">
            <form asp-action="CreateIssue" asp-controller="Jira" method="post">
                <div class="form-group">
                    <label for="summary" class="lang" key="theme">Theme</label>
                    <input type="text" class="form-control" id="summary" name="summary" required>
                </div>
                <div class="form-group">
                    <label for="description" class="lang" key="description">Description</label>
                    <textarea class="form-control" id="description" name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="collectionName" class="lang" key="nameCol">Collection Name</label>
                    <input type="text" class="form-control" id="collectionName" name="collectionName">
                </div>
                <div class="form-group">
                    <label for="priority" class="lang" key="priority">Priority</label>
                    <select class="form-control" id="priority" name="priority" required>
                        <option>High</option>
                        <option>Medium</option>
                        <option>Low</option>
                    </select>
                </div>
                <input type="hidden" id="pageUrl" name="pageUrl" value="@Model" />
                <div class="mt-3 d-flex justify-content-center align-items-center">
                    <button class="btn btn-outline-danger lang" type="submit" key="crIssue">Create Issue</button>
                </div>

            </form>
        </div>
        <div class="col"></div>
    </div>
</div>

